server {
	listen 0.0.0.0:1006

	root pages/
	index example.html

	autoindex off

	allow_methods GET POST DELETE

	client_body_size 1000

	location /home {
		allow_methods POST GET
		index example3.html
		autoindex off
	}

	location /upload {
		allow_methods POST DELETE GET
		cgi_path example.php
		client_body_size 10000
	}

	location /directory {
		allow_methods GET
		root YoupiBanane/
		index youpi.bad_extension
	}
}
